<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFDevelopers.Minimal.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Themes/Basic/ControlBasic.xaml" />
        <ResourceDictionary Source="../Themes/Basic/Animations.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="SliderThumbHorizontalTop" TargetType="{x:Type Thumb}">
        <controls:SmallPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            UseLayoutRounding="True">
            <Border
                Name="PART_Border"
                Width="{StaticResource WD.ThumbWidth}"
                Height="{StaticResource WD.ThumbWidth}"
                Margin="-1,0,0,0"
                Background="{DynamicResource WD.BackgroundSolidColorBrush}"
                BorderBrush="{DynamicResource WD.PrimaryPressedSolidColorBrush}"
                BorderThickness="2"
                CornerRadius="8"
                RenderTransformOrigin=".5,.5"
                SnapsToDevicePixels="True" />
        </controls:SmallPanel>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_Border" Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="SliderThumbHorizontalBottom" TargetType="{x:Type Thumb}">
        <controls:SmallPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            UseLayoutRounding="True">
            <Border
                Name="PART_Border"
                Width="{StaticResource WD.ThumbWidth}"
                Height="{StaticResource WD.ThumbWidth}"
                Margin="-1,0,0,0"
                Background="{DynamicResource WD.BackgroundSolidColorBrush}"
                BorderBrush="{DynamicResource WD.PrimaryNormalSolidColorBrush}"
                BorderThickness="2"
                CornerRadius="8"
                RenderTransformOrigin=".5,.5"
                SnapsToDevicePixels="True" />
